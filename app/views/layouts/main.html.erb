<!DOCTYPE html>
<html>
<head>

  <title>showbomber</title>
  <link rel="shortcut icon" href="/favicon.ico" />
  <%= stylesheet_link_tag 'radio' %>

  <% %w{prototype jquery-1.4.2.min swfobject parseUri}.each do |lib| %>
    <%= javascript_include_tag "3p/#{lib}" %>
  <% end %>
  <script>
     var $j = jQuery.noConflict()
  </script>

  <% %w{radio radio.playlist radio.controller radio.youtube radio.youtube.player radio.youtube.data}.each do |lib| %>
    <%= javascript_include_tag lib %>
  <% end %>
  <%= csrf_meta_tag %>
</head>
<body>

  <div id="header">
    <%= link_to 'showbomber', root_path, :id=>'title'%>
    <ul id="nav">
      <li><%= link_to 'Events', events_path %></li>
      <li><%= link_to 'Artists', artists_path %></li>
      <li><%= link_to 'Venues', venues_path %></li>
    </ul>
  </div> <!-- end #header -->

  <div id="main">
    <p class="notice"><%= notice %></p>
    <%= yield %>
  </div><!-- end #main -->

  <div id="footer">
    <% %w{contact}.each do |link| %>
      <%= link_to link, link %>
    <% end %>
  </div>

</body>
</html>
